
<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row">
            <%= form_for(@newbook, url: books_path) do |f| %>
            <% if @newbook.errors.any? %>
                <div id="error_explanation">
                    <h3><%= @newbook.errors.count %> serrors prohibited this obj from being saved:</h3>
                  <ul>
                      <% @newbook.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                   </ul>
                </div>
            <% end %>
    	<div>
        <%= render 'users/show', user: @user , newbook: @newbook %>
    	</div>

    		<div class="col-xs-9">
                <h2>Books</h2>

         	<table class="table table-striped">
                <thead>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
    			</thead>
            <tobody>
			<% @books.each do|book| %>
                <tr>
                    <td><span><%= link_to user_path(book.user) do%>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg"%>
                    <% end %>
                    </span></td>
    				<td><span><%= link_to book_path(book) do %>
    				<%= book.title %></span></td>
    				<% end %>
                	<td><%= book.body %></td>
    			     <% end %>
                </tr>
            </tobody>
            </table>
		</div>
	</div>
</div>

<% end %>
