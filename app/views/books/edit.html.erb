
<div class="body">

		<p id="notice"></p>
		<div class="container">
		<div class='row'>
			<div class='col-md-6 col-md-offset-3'>
			<h1>Editing Book</h1>

	    		<div class="row">
		            <% if @book.errors.any? %>
		                <div id="error_explanation">
		                    <h3><%= @book.errors.count %> serrors prohibited this obj from being saved:</h3>
		                  <ul>
		                      <% @book.errors.full_messages.each do |message| %>
		                        <li><%= message %></li>
		                      <% end %>
		                   </ul>
		                </div>
		            <% end %>
	        	</div>


			<%= form_for(@book) do |f| %>
				<div class="field row">
					 <%=f.label :Title %>
				  	<%= f.text_field :title,class:"col-xs-12"%>
				</div>

				<div class="field row">
				  	<%=f.label :Opinion %>
				  	<%=f.text_field :body,class:"col-xs-12" %>
				</div>

				<div class="actions row">
				<%= f.submit 'Update Book',class:"btn btn-primary col-xs-12"%>
				</div>
				<% end %>
				<a><%= link_to 'Show',book_path(@book) %></a>
				|
				<a><%= link_to 'Back',books_path %></a>

			</div>
		</div>
	</div>
</div>
