
<p id="notice"><%= notice %></p>
	<div class="container">
    <div class="row">
			<%= render 'users/show', user: @user , newbook: @newbook %>

		  <div class="col-xs-9">
		  	<h2>Users</h2>
			<table class="table table-hover table-inverse">
				  <thead>
				      <th>image</th>
				      <th>name</th>
				      <th></th>
				      <th colspan="3"></th>
				  </thead>

			<tbody>
				<tr>
				<% @users.each do |user| %>
				<tr>
					<td><span><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image.jpg"%></span></td>
			        <td><%= user.name %></td>
				    <td><%= link_to'Show',user_path(user.id) %></td>
			        <% end %>
			    </tr>
				</tr>
			</tbody>
			</table>
		  </div>
	</div>
	</div>