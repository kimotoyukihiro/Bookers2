
<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">
		<%= render 'users/show', user: @user , newbook: @newbook %>
		<div class="col-xs-9">
			<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
					    <tr>
					      <th></th>
					      <th>Title</th>
					      <th>Opinion</th>
					      <th colspan="3"></th>
					    </tr>
					</thead>


					<tbody>
						<tr>
							<% @books.each do|book| %>
						<tr>
							<td><span>
								<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg' ,fallback:"no_image.jpg",size:"40x40"%>
							</span></td>
							<td>
								<%= link_to book_path(book) do %>
								<%= book.title %>
							</td>
							<% end %>
								<td><%= book.body %></td>
						</tr>
							<% end %>
						</tr>
					</tbody>
				</table>
		</div>
</div>
</div>

